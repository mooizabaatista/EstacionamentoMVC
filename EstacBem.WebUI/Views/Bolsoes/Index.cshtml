@model IEnumerable<EstacBem.Domain.Entities.Bolsao>


<div class="container">
    <!-- Header -->
    <div class="row">
        <div class="col-12 text-center mt-5">
            <h3 class="font-weight-lighter">Gestão de Bolsões</h3>
            <hr />
        </div>
    </div>
    <!-- Link para criar novo bolsão -->
    <div class="col-2">
        <a class="btn btn-sm btn-dark d-flex justify-content-center align-items-md-center mb-3 p-2"  asp-action="Create" asp-controller="Bolsoes">
            Cadastrar <i class="fa fa-plus ml-2" aria-hidden="true"></i>
        </a>
    </div>

    <!-- Tabela com os bolsoes -->
    <div class="row">
        <table class="table table-sm table-hover text-center">
            <thead class="bg-dark text-light">
                <tr>
                    <th scope="col">Nome</</th>
                    <th scope="col">Quantidade de vagas</</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.QtdVagas</td>
                        <td>
                            <span>
                                <!-- Editar -->
                                <a asp-action="Edit" asp-controller="Bolsoes" asp-route-id="@item.Id" class="btn btn-sm btn-dark">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                 <!-- Remover -->
                                <a asp-action="Remove" asp-controller="Bolsoes" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
