<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EstacBem.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link href="https://cdn.staticaly.com/gh/hung1001/font-awesome-pro/4cac1a6/css/all.css" rel="stylesheet" type="text/css" />
    <style>
        body, html {
            height: 100%;
        }

        .bg {
            /*background-image: url("https://img.freepik.com/vetores-gratis/fundo-azul-suave-onda_41084-433.jpg?w=740");*/
            //background-image: url("https://www.solidbackgrounds.com/images/1280x768/1280x768-dark-gray-solid-color-background.jpg");
            /* Full height */
            height: 89vh;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            margin-top: -20px;
        }
    </style>
</head>
<body>
    <header>
        <nav id="myNav" class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <div class="row">
                    <div class="col-12 d-flex align-items-end">
                        <a class="navbar-brand px-lg-3" href="#"><img src="~/images/logo.png" width="50" height="30" /></a>
                        <div class="px-lg-5"></div>
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link px-lg-5" asp-action="Index" asp-controller="Home">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-5" asp-action="Index" asp-controller="Clientes">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-5" asp-action="Index" asp-controller="Veiculos">Veiculos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-5" asp-action="Index" asp-controller="Estadias">Estadias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-5" asp-action="Index" asp-controller="Bolsoes">Bolsoes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-lg-5" asp-action="Index" asp-controller="Precificacoes">Precificacoes</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid bg">
        <div class="row">
        </div>
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-flash-alert.min.js" asp-append-version="true"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
