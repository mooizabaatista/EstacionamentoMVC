@model IEnumerable<EstacBem.Domain.Entities.Cliente>


<div class="container">
    <!-- Header -->
    <div class="row">
        <div class="col-12 text-center mt-5">
            <h3 class="font-weight-lighter">Gestão de Clientes</h3>
            <hr />
        </div>
    </div>
    <!-- Link para criar novo cliente -->
    <div class="row">
        <div class="col-2">
            <a class="btn btn-sm btn-dark d-flex justify-content-center align-items-md-center mb-3 p-2" asp-action="Create" asp-controller="Clientes">
                Cadastrar <i class="fa fa-plus ml-2 mt-1" aria-hidden="true"></i>
            </a>
        </div>
        <div class="col-3 mb-2">
            <input type="text" class="form-control" id="txtFiltroCPF" placeholder="Procurar pelo cpf..." />
        </div>
    </div>

    <!-- Tabela com os clientes -->
    <div class="row">
        <table class="table table-sm table-hover text-center">
            <thead class="bg-dark text-light">
                <tr>
                    <th scope="col">Nome</</th>
                    <th scope="col">Sobrenome</</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="filtrohide" filtro="@item.CPF.ToLower()">
                        <td>@item.Nome</td>
                        <td>@item.SobreNome</td>
                        <td>@item.CPF</td>
                        <td>
                            <span>
                                <!-- Editar -->
                                <a asp-action="Edit" asp-controller="Clientes" asp-route-id="@item.Id" class="btn btn-sm btn-dark">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                <!-- Remover -->
                                <a asp-action="Remove" asp-controller="Clientes" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Home/JsCreateEstadiaHome.js"></script>
    <script src="~/js/Cliente/JsClienteHome.js"></script>
}